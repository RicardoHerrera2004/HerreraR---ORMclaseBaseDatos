@model IEnumerable<HerreraR___ORMclaseBaseDatos.Models.Facultad>

@{
    ViewData["Title"] = "Index";
}

<h1>Facultades</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a class = "btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class = "btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class = "btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
